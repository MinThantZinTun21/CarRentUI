<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarRent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_grey_transparent_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/pink_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="navTheme" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="TextLargeMarker" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextLabelGrey" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_grey_text</item>
    </style>

    <style name="TextCaptionGrey" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextCaptionBlack" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextCaptionPink" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pink_500</item>
    </style>

    <style name="TextCaptionWhite" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeaderBlack" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTileBlack" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeaderWhite" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeaderPink" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/pink_500</item>
    </style>
</resources>